{
  "name": "payments-service",
  "version": "1.0.0",
  "description": "Production-minded payments service with webhook-driven architecture",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "job:dunning": "tsx src/jobs/dunning.ts",
    "job:reconcile": "tsx src/jobs/reconcile.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "payments",
    "webhooks",
    "stripe",
    "iap",
    "wise",
    "subscriptions"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/firestore": "^7.1.0",
    "express": "^4.18.2",
    "firebase-admin": "^12.0.0",
    "stripe": "^14.10.0",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "node-cron": "^3.0.3",
    "axios": "^1.6.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/node-cron": "^3.0.11",
    "@types/jest": "^29.5.11",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1"
  }
}
